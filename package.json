{
  "name": "@0xpolygonid/js-sdk",
  "version": "1.32.5",
  "description": "SDK to work with Polygon ID",
  "source": "./src/index.ts",
  "exports": {
    ".": {
      "node": {
        "import": "./dist/node/esm/index.js",
        "require": "./dist/node/cjs/index.cjs"
      },
      "browser": "./dist/browser/esm/index.js",
      "umd": "./dist/browser/umd/index.global.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "type": "module",
  "sideEffects": false,
  "types": "dist/types/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build:types": "tsc --declaration --emitDeclarationOnly",
    "build": "npm run clean && tsup && npm run build:types",
    "clean": "rimraf ./dist",
    "test": "vitest run --bail=1",
    "lint": "eslint --fix src tests",
    "lint:check": "eslint src tests",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier \"src/**/*.ts\" \"tests/**/*.ts\" --check"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/0xPolygonID/js-sdk.git"
  },
  "author": "",
  "license": "MIT or Apache-2.0",
  "bugs": {
    "url": "https://github.com/0xPolygonID/js-sdk/issues"
  },
  "homepage": "https://github.com/0xPolygonID/js-sdk#readme",
  "devDependencies": {
    "@cspell/eslint-plugin": "^8.19.4",
    "@iden3/eslint-config": "https://github.com/iden3/eslint-config",
    "@typechain/ethers-v6": "^0.5.1",
    "@types/jsonld": "^1.5.15",
    "@types/node": "^24.0.4",
    "@types/pubsub-js": "^1.8.6",
    "@types/uuid": "^10.0.0",
    "dotenv": "^17.0.1",
    "nock": "^14.0.5",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@iden3/js-crypto": "^1.3.1",
    "@iden3/js-iden3-core": "^1.7.0",
    "@iden3/js-jsonld-merklization": "1.7.1",
    "@iden3/js-jwz": "^1.11.0",
    "@iden3/js-merkletree": "^1.5.0",
    "ffjavascript": "^0.3.1",
    "rfc4648": "^1.5.4",
    "snarkjs": "^0.7.5"
  },
  "dependencies": {
    "@iden3/onchain-non-merklized-issuer-base-abi": "^0.0.3",
    "@iden3/universal-verifier-v2-abi": "^2.0.2",
    "@noble/curves": "^1.9.2",
    "ajv": "8.17.1",
    "ajv-formats": "3.0.1",
    "did-jwt": "8.0.4",
    "did-resolver": "4.1.0",
    "ethers": "^6.13.1",
    "idb-keyval": "6.2.2",
    "jsonld": "8.3.3",
    "pubsub-js": "1.9.5",
    "quick-lru": "^7.0.1",
    "uuid": "11.1.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=20.11.0"
  }
}
