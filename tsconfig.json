{
  "compilerOptions": {
    "outDir": "dist/cjs",
    "module": "ES2022",
    "target": "es2022",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": ["node_modules/@types"],
    "inlineSources": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/types"
  },
  "include": ["src", "types"]
}
